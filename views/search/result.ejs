<div class="section">
	<h1 class="heading heading--1">Search for ”<%= query %>”</h1>
</div>

<div class="section">
	<ul class="game-gallery">
	<% games.forEach(function (game) { %>
		<li class="game-gallery__item">
			<a href="/game/bgg/<%= game.id %>" class="game-gallery__game">
				<h3 class="game-gallery__heading heading--4"><%= game.name %> (<%= game.year %>)</h3>
				<div class="game-gallery__thumb  thumbnail">
					<div class="thumbnail__inner" style="background-image:url(<%= game.thumbnail %>)">
						<img class="thumbnail__image" src="<%= game.thumbnail %>" alt="">
					</div>
				</div>
			</a>
		</li>
	<% }) %>
	</ul>
</div>